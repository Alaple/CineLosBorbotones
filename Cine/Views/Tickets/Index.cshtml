@model IEnumerable<Ticket>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nroTicket)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cantEntradas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.precioEntrada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.esTarjeta)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nroTicket)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cantEntradas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.precioEntrada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.esTarjeta)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ticketID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ticketID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ticketID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
